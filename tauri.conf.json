{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DHD",
	"version": "0.2.4",
	"identifier": "com.korora.dhd",
	"build": {
		"frontendDist": "./dist",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "bun run dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "DHD - Declarative Home Deployments",
				"width": 1200,
				"height": 800,
				"resizable": true,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/icon.png",
			"icons/icon.ico"
		]
	}
}